{
  "name": "react-bloc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react-bloc/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/react-bloc/src/**/*.{ts,tsx,js,jsx}",
          "packages/react-bloc/tests/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --noEmit -p packages/react-bloc/tsconfig.lib.json"]
      }
    },
    "typedoc": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/react-bloc/src",
        "commands": ["typedoc --out ../../../docs/react-bloc index.ts"]
      }
    },
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/react-bloc"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      },
      "dependsOn": ["typecheck"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/react-bloc/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "react-bloc:build",
        "outputPath": "dist/packages/react-bloc",
        "changelog": true,
        "github": true,
        "npm": false,
        "repositoryUrl": "https://github.com/jacobtipp/bloc-state.git",
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "Features" },
            { "type": "fix", "section": "Bug Fixes" },
            {
              "type": "refactor",
              "section": "Code Refactoring",
              "hidden": false
            },
            {
              "type": "docs",
              "scope": "readme",
              "section": "Documentation",
              "hidden": false
            },
            {
              "type": "build",
              "scope": "deps",
              "section": "Build System Dependencies",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "Performance Improvements",
              "hidden": false
            },
            {
              "type": "revert",
              "section": "Revert Changes",
              "hidden": false
            }
          ]
        },
        "releaseRules": [
          { "type": "docs", "scope": "readme", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "build", "scope": "deps", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "perf", "release": "patch" }
        ],
        "branches": [
          "main",
          {
            "name": "dev",
            "prerelease": true
          },
          {
            "name": "dev-react-bloc",
            "prerelease": true
          }
        ],
        "plugins": [
          [
            "@semantic-release/npm",
            {
              "npmPublish": false
            }
          ],
          [
            "@semantic-release/pnpm",
            {
              "pkgRoot": "dist/packages/react-bloc",
              "npmPublish": false
            }
          ],
          [
            "@semantic-release/pnpm",
            {
              "pkgRoot": "packages/react-bloc",
              "tarballDir": "dist/packages/react-bloc"
            }
          ]
        ],
        "tagFormat": "react-bloc-v${VERSION}"
      }
    }
  }
}
